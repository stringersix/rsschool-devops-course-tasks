  "panels": [
    {
      "datasource": "Prometheus",
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "decimals": 2
        },
        "overrides": []
      },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
      "id": 1,
      "interval": "",
      "legend": { "show": true, "placement": "bottom" },
      "title": "CPU Utilization (%)",
      "type": "timeseries",
      "targets": [
        {
          "expr": "100 - (avg by(instance) (rate(node_cpu_seconds_total{mode=\"idle\"}[5m])) * 100)",
          "legendFormat": "{{instance}}",
          "refId": "A"
        }
      ]
    },
    {
      "datasource": "Prometheus",
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "decimals": 2
        },
        "overrides": []
      },
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
      "id": 2,
      "interval": "",
      "legend": { "show": true, "placement": "bottom" },
      "title": "Memory Utilization (%)",
      "type": "timeseries",
      "targets": [
        {
          "expr": "100 * (1 - (node_memory_MemAvailable_bytes / node_memory_MemTotal_bytes))",
          "legendFormat": "{{instance}}",
          "refId": "B"
        }
      ]
    },
    {
      "datasource": "Prometheus",
      "fieldConfig": {
        "defaults": {
          "unit": "gigabytes",
          "min": 0,
          "decimals": 2
        },
        "overrides": []
      },
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 8 },
      "id": 3,
      "interval": "",
      "legend": { "show": true, "placement": "bottom" },
      "title": "Storage Usage (GB)",
      "type": "timeseries",
      "targets": [
        {
          "expr": "(node_filesystem_size_bytes{mountpoint!=\"\",fstype!=\"tmpfs\"} - node_filesystem_free_bytes{mountpoint!=\"\",fstype!=\"tmpfs\"}) / 1024 / 1024 / 1024",
          "legendFormat": "{{instance}} {{mountpoint}}",
          "refId": "C"
        }
      ]
    }
  ],
